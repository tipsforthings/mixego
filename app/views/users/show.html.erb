<% provide(:title, @user.username) %>
<div class="row">
  <aside class="medium-4 columns">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
      <%= @user.email %>
    </section>
  </aside>
  <div class="medium-8 columns">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= foundation_paginate @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= foundation_paginate @microposts %>
    <% end %>
  </div>
</div>
