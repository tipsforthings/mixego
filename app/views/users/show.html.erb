<% provide(:title, @user.username) %>
<div class="row">
  <aside class="medium-4 columns">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
      <%= @user.email %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="medium-8 columns">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h2 class="center">Posts</h2>
      <%= foundation_paginate @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= foundation_paginate @microposts %>
    <% end %>
  </div>
</div>
