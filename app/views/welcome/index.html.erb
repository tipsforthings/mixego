<% if logged_in? %>
  <div class="row">
    <aside class="medium-3 columns">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="stats">
        <%= render 'shared/micropost_form' %>
      </section>
      
    </aside>
    <div class="medium-6 columns">
      <% flash.each do |message_type, message| %>
        <div class="alert-box <%= message_type %>"><%= message %></div>
      <% end %>

       <%= render 'shared/stream' %>
     
    </div>    
    <bside class="medium-3 columns">
    <%= render 'shared/feed' %>

    </bside>
  </div>
<% else %>
<div class="frontpage-row">
    <div class="callout panel radius center frontpage-panel">
    <h2>WELCOME</h2>
    <h3>TO</h3>
    <h1>MIXEGO</h1>
    <hr />
    <%= link_to " Login ", login_path, class: "button secondary radius" %>
    <%= link_to "Sign Up", signup_path, class: "button radius" %>
    </div>
</div>
<% end %>
